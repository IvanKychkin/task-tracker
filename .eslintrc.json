{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["plugin:react/recommended", "airbnb", "prettier"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
      "prettier/prettier": 1,
      "react/react-in-jsx-scope": "off",
      "import/prefer-default-export": 0,
      "react/function-component-definition": [
        "error",
        {
          "namedComponents": ["arrow-function"]
        }
      ],
      "no-unused-vars" : 0,
      "no-alert" : 0,
      "react/prop-types": 0,
      "arrow-body-style": 0,
      "no-console": "off",
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        } 
      ] 
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["./"]
        }
      }
    }
  }